    "paths": {
        "/auth": {
            "post": {
                "description": "Check if user with a certain role has access to an url",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Check if user with a certain role has access to an url",
                "operationId": "access-handler",
                "parameters": [
                    {
                        "description": "query params",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/pdp.AccessRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/pdp.AccessResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "pdp.AccessRequest": {
            "description": "Requests access to a url for a user with a certain role given by token",
            "type": "object",
            "properties": {
                "token": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            }
        },
        "pdp.AccessResponse": {
            "description": "Response to a request for access to a url for a user with a certain role given by token",
            "type": "object",
            "properties": {
                "permission": {
                    "$ref": "#/definitions/pdp.Permission"
                }
            }
        },
        "pdp.Permission": {
            "description": "Permission to access a url Used in AccessResponse",
            "type": "string",
            "enum": [
                "allow",
                "deny"
            ],
            "x-enum-varnames": [
                "Allow",
                "Deny"
            ]
        }
    }
